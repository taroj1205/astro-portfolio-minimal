{
  "name": "astro-portfolio-minimal",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --port 3000",
    "build": "astro build",
    "preview": "astro preview --port 3000",
    "start": "astro preview --port 3000",
    "astro": "astro",
    "lint": "eslint . --max-warnings=0 --cache --no-warn-ignored",
    "lint:fix": "eslint . --fix",
    "spell": "cspell \"**/*.{ts,tsx,js,jsx,astro,md,mdx,json,yml,yaml}\"",
    "format": "prettier . --check --cache",
    "format:fix": "prettier . --write --cache --list-different",
    "commitlint": "commitlint --edit",
    "validate-branch": "scripts/validate-branch-name.js",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.0",
    "astro": "^5.4.2",
    "sharp": "^0.34.2"
  },
  "engines": {
    "node": ">=22.16.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@cspell/dict-bash": "4.2.0",
    "@cspell/dict-css": "4.0.17",
    "@cspell/dict-html": "4.0.11",
    "@cspell/dict-node": "5.0.7",
    "@cspell/dict-npm": "5.2.6",
    "@cspell/dict-typescript": "3.2.2",
    "@cspell/eslint-plugin": "9.1.1",
    "@eslint/compat": "1.3.0",
    "@eslint/js": "9.29.0",
    "@typescript-eslint/eslint-plugin": "8.34.1",
    "@typescript-eslint/parser": "8.34.1",
    "@typescript-eslint/utils": "8.34.1",
    "cspell": "9.1.1",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.3",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "lefthook": "1.11.14",
    "prettier": "3.5.3",
    "prettier-eslint": "16.4.2",
    "prettier-plugin-astro": "0.14.1",
    "typescript-eslint": "8.34.1"
  },
  "trustedDependencies": [
    "sharp"
  ]
}
