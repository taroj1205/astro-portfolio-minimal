{
  "name": "astro-portfolio-minimal",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "astro dev --port 3000",
    "build": "astro build",
    "preview": "astro preview --port 3000",
    "start": "astro preview --port 3000",
    "astro": "astro",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "spell": "cspell \"**/*.{ts,tsx,js,jsx,astro,md,mdx,json,yml,yaml}\" --gitignore --cache",
    "format": "prettier . --check --cache",
    "format:fix": "prettier . --write --cache --list-different",
    "commitlint": "commitlint --edit",
    "validate-branch": "src/scripts/validate-branch-name.js",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@astrojs/mdx": "4.3.13",
    "astro": "5.16.6",
    "sharp": "0.34.5"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "cspell": "9.4.0",
    "lefthook": "2.0.13",
    "oxc": "1.0.1",
    "oxlint": "1.35.0",
    "oxlint-tsgolint": "0.10.0",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=22.16.0"
  },
  "trustedDependencies": [
    "sharp"
  ]
}
